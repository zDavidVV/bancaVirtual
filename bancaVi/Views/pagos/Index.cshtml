@model IEnumerable<bancaVi.Models.pago>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pagos Realizados</h2>


<p>
    <a class="btn btn-primary" href="~/pagos/Create" role="button">Realizar un nuevo pago</a>
</p>


@if (@ViewBag.sms != null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Alerta!</h4>
        <p>@ViewBag.sms<p>
    </div>
}


<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.servicio.id_servicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.servicio.nombre_servicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.servicio.valor_servicio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.servicio.id_servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servicio.nombre_servicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servicio.valor_servicio)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.id_pago })

            </td>
        </tr>
    }

</table>
